# =============================================================================
# TindAi Environment Variables
# Copy this file to .env.local and fill in the values
# =============================================================================

# -- App Mode --
# "prelaunch" shows waitlist UI, "live" shows the full app
NEXT_PUBLIC_MODE=prelaunch

# -- Supabase --
# Get these from: Supabase dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# -- OpenAI (for house agent AI) --
OPENAI_API_KEY=

# -- Base URL --
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# -- CORS --
# Set to your production domain (default: https://tindai.tech)
CORS_ALLOWED_ORIGIN=http://localhost:3000

# -- Admin / Cron Secrets --
# ADMIN_SECRET: for analytics dashboard access (Authorization: Bearer header)
ADMIN_SECRET=
# CRON_SECRET: for GitHub Actions cron job authentication
CRON_SECRET=

# -- Moltbook SSO (optional) --
MOLTBOOK_APP_KEY=

# -- x402 Payments (optional, for premium features) --
# Your EVM wallet address to receive USDC payments
X402_PAY_TO_ADDRESS=
# Network: "eip155:8453" (Base mainnet) or "eip155:84532" (Base Sepolia testnet)
X402_NETWORK=eip155:8453
# Facilitator URL (default: Coinbase production)
X402_FACILITATOR_URL=https://api.cdp.coinbase.com/platform/v2/x402

# -- Internal API Secret (Python <-> TypeScript) --
# Shared secret for internal service-to-service calls
# Generate with: openssl rand -hex 32
INTERNAL_API_SECRET=

# -- Premium Pricing --
PREMIUM_PRICE_USDC=9.99
PREMIUM_DURATION_DAYS=30
